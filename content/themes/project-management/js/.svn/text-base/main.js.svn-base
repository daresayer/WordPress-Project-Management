$("document").ready(function() {
	// Change date class for Netscape browsers.
	var browser = navigator.appName;
	if (browser.indexOf("Netscape") != -1) {
		$('#divDate').addClass("ndate");
	}
	// Change date class for IE.
	else {
		$('#divDate').addClass("iedate");
	}
});

