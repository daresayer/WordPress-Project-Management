h1, h2, h3, h4, h5, h6 {
	font-family: "myriad-pro", sans-serif;
}

h1 {
	color: #ff0000;
	font: 700 2em/1.625 "myriad-pro";
}
h2 {
	font: 700 2em/1.625 "myriad-pro";
}
h3 {
	font: 400 2em/1.625 "myriad-pro";
}
h4 {
	font: 700 1.5em/1.625 "myriad-pro";
}
h5 {
	font: 400 1.5em/1.625 "myriad-pro";
}
h6 {
	font: 700 1em/1.625 "myriad-pro";
}

.btn {
	background: #666;
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	-ms-box-shadow: none;
	-o-box-shadow: none;
	box-shadow: none;
	color: #fff;
	text-shadow: none;
}
.btn:hover {
	color: #fff;
	background: #555;
}
.btn:focus {
	-webkit-box-shadow: 0 0 4px #5F6062, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	-moz-box-shadow: 0 0 4px #5F6062, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	box-shadow: 0 0 4px #5F6062, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	color: white;
}
.btn.radius {
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-ms-border-radius: 5px;
	-o-border-radius: 5px; 
	border-radius: 5px;
}
.btn.btn-primary {
	background: #f00;
}
.btn.btn-primary:hover {
	background-color: #b30000;
}
.btn.primary:focus {
	-webkit-box-shadow: 0 0 4px #5F6062, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	-moz-box-shadow: 0 0 4px #5F6062, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	box-shadow: 0 0 4px #5F6062, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
}
.btn.btn-success {
	background-color: #5da423;
	border: 1px solid #396516;
}
.btn.btn-success:hover {
	background-color: #457a1a;
}
.btn.btn-success:focus {
	-webkit-box-shadow: 0 0 5px #5da423, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	-moz-box-shadow: 0 0 5px #5da423, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	box-shadow: 0 0 5px #5da423, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
}
.btn.btn-warning {
	background-color: #FF0000;
	border: 1px solid #7f0a0c;
}
.btn.btn-warning:hover {
	background-color: #970b0e;
}
.btn.btn-warning:focus {
	-webkit-box-shadow: 0 0 4px #FF0000, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	-moz-box-shadow: 0 0 4px #FF0000, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	box-shadow: 0 0 4px #FF0000, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
}
.btn.btn-info {
	background-color: #e9e9e9;
	color: #1d1d1d;
	border: 1px solid #c3c3c3;
}
.btn.btn-info:hover {
	background-color: #d0d0d0;
}
.btn.btn-info:focus {
	-webkit-box-shadow: 0 0 5px #e9e9e9, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	-moz-box-shadow: 0 0 5px #e9e9e9, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
	box-shadow: 0 0 5px #e9e9e9, 0 1px 0 rgba(255, 255, 255, 0.5) inset;
}